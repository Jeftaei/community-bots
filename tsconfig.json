{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "modules/**/*.ts",
    "modules/**/*.js",
    "core/**/*.ts",
    "core/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}